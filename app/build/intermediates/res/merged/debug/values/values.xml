        <item>Take Photo</item>
        <item>Use Existing</item>
    </string-array>
    <color name="colorAccent">#55acee</color>
    <color name="colorPrimary">#36465d</color>
    <color name="colorPrimaryDark">#444444</color>
    <color name="selected_filter">#F6358A</color>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <string name="action_settings">Settings</string>
    <string name="app_name">tumblrsnap</string>
    <string name="comment_button">Send</string>
    <string name="comment_hint">Comment on the photo...</string>
    <string name="hello_world">Hello world!</string>
    <string name="title_activity_preview_photo">PreviewPhotoActivity</string>
    <string name="title_activity_settings">SettingsActivity</string>
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="FilterLabel">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
    </style>
    <style name="FrameLayoutFilter">
        <item name="android:onClick">onSelectFilter</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>
    </style>
    <style name="ImageViewFilter">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:scaleType">center</item>
    </style>
    <style name="ImageViewFrame">
        <item name="android:tag">frame"</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:background">@android:drawable/screen_background_light</item>
    </style>
</resources>